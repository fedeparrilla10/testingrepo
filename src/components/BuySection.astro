---
import LongSection from './LongSection.astro';
import { buySectionData, productData } from '../data/buy_section';
---

<LongSection
  title="REVOLUTION 5 PRO"
  subtitle="¡Hazte con él en tu tienda favorita!"
  color="white"
  pt="pt-10"
  textSize="text-[40px]"
  id="buysection"
>
  <article
    slot="main"
    class="text-white flex flex-col xl:flex-row items-center justify-center gap-10 w-screen"
  >
    <div
      class="flex flex-col lg:flex-row justify-around gap-16 xl:gap-24 py-10"
    >
      {
        productData.map((product) => (
          <div class="flex flex-col items-center justify-center bg-gradient-to-r from-zinc-950 to-zinc-900 rounded-2xl p-5 gap-5">
            <img src={product.imgSrc} alt={product.title} class="w-72" />
            <p class="text-xl font-bold tracking-wider">{product.title}</p>
            <p class="text-md">¡Incluye Bolsa de Transporte!</p>
            <div class="flex flex-row gap-10">
              {product.buySectionStores.map((store) => (
                <a
                  href={store.link}
                  class="flex items-center justify-center gap-2"
                  target="_blank"
                >
                  <img src={store.src} alt={store.name} class="w-16" />
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </article>

  <div slot="footer" class="pb-4 text-white w-3/4">
    <div
      class="flex flex-col md:flex-row justify-center md:justify-between items-center gap-5"
    >
      <div class="flex flex-row gap-2">
        <a
          href="https://www.facebook.com/Nacongaming/?brand_redir=618785068327460"
        >
          <img
            src="/testingrepo/facebook.svg"
            alt="Facebook"
            class="w-8 md:w-10"
          />
        </a>

        <a href="https://www.instagram.com/nacongamers_es/?hl=es">
          <img
            src="/testingrepo/instagram.svg"
            alt="Instagram"
            class="w-8 md:w-10"
          />
        </a>

        <a href="https://twitter.com/NacongamingES?">
          <img src="/testingrepo/x.svg" alt="Twitter" class="w-8 md:w-10" />
        </a>

        <a href="https://www.youtube.com/@NacongamingEspana">
          <img
            src="/testingrepo/youtube.svg"
            alt="YouTube"
            class="w-8 md:w-10"
          />
        </a>
      </div>
      <div>
        <img
          src="/testingrepo/naconlogo.svg"
          alt="Nacon"
          class="w-16 md:w-24"
        />
      </div>
    </div>

    <div>
      <p>
        Desarrollado por SITELICON ECOMMERCE SERVICES 2023 | Todos los derechos
        reservados.
      </p>
    </div>
  </div>

  <img
    slot="background"
    src={buySectionData.background}
    class="object-center object-cover h-full w-full"
  />
</LongSection>
