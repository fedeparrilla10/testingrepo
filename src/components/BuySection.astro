---
import Section from './Section.astro';
---

<Section
  title="REVOLUTION 5 PRO"
  subtitle="¡Hazte con él en tu tienda favorita!"
  color="black"
  pt="pt-10"
  textSize="text-[45px]"
>
  <article
    slot="main"
    class="text-black flex flex-col items-center justify-center"
  >
    <div class="flex flex-col gap-5 items-center justify-center">
      <img
        src="/testingrepo/stores2.png"
        alt=""
        class="sm:max-w-sm xl:max-w-4xl"
      />
    </div>
  </article>

  <div slot="footer" class="pb-10 w-2/4">
    <button
      type="button"
      class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300
      font-medium rounded-full text-xl px-10 py-4 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 xl:w-1/4"
      >229,90€</button
    >
  </div>

  <div
    slot="background"
    class="bg-gray-300 object-center object-cover h-full w-full"
  >
  </div>
</Section>
