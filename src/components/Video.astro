---
import Section from './Section.astro';

const { textColor, videoTitle, videoDescription, videoSrc, backgroundColor } =
  Astro.props;
---

<Section>
  <article
    slot="main"
    class=`${textColor} flex flex-col xl:flex-row items-center justify-center`
  >
    <div
      class="flex flex-col lg:flex-row gap-10 2xl:gap-12 justify-center items-center xl:pt-12"
    >
      <div class="flex flex-col gap-2 xl:gap-4 max-w-6xl lg:order-2">
        <h2
          class=`text-[32px] xl:text-[40px] font-bold tracking-widest ${textColor} underline underline-offset-8`
        >
          {videoTitle}
        </h2>
        <p class="text-xl">
          {videoDescription}
        </p>
      </div>
      <video
        loop
        autoplay
        muted
        src={videoSrc}
        class="w:1/2 md:w-2/4 rounded-3xl lg:order-1"></video>
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] border-black backdrop-blur-sm text-sm rounded font-medium text-black px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
      href="#"
    >
      COMPRAR AHORA</a
    >
  </div>

  <div
    slot="background"
    class=`${backgroundColor} object-center object-cover h-full w-full`
  >
  </div>
</Section>
